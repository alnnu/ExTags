<!doctype html>
<html lang="pt-br">
<head>

    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <title>projetos</title>
</head>
<body>

    <% projetos.forEach(function(projeto) { %>
        <a href="/projeto?id=<%= projeto.id%>">
            <div class="card" style="width: 18rem; border: solid 1px">
                <div class="card-body">
                    <h5 class="card-title"><%= projeto.nome%></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><% if (projeto.estado == 1){%>
                            Em espera
                        <%} else if(projeto.estado == 2) {%>
                            Fazendo
                        <%} else {%>
                            Feito
                        <%}%></h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= projeto.data %></li>
                        <li class="list-group-item"><%= projeto.gerente_email %></li>
                        <li class="list-group-item"><%= projeto.id %></li>
                    </ul>
                </div>
            </div>
        </a>

    <% }); %>


</body>
</html>